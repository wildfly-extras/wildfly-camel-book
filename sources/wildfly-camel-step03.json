{
  "kind": "Config",
  "apiVersion": "v1beta1",
  "metadata": {
    "name": "wildfly-camel-rest",
    "description": "Creates a WildFly Camel cluster running the REST example",
  },
  "items": [
    {
      "id": "rest-service",
      "kind": "Service",
      "apiVersion": "v1beta1",
      "containerPort": 8080,
      "port": 8080,
      "publicIPs": [ "54.154.239.169" ],
      "selector": {"name": "camel-pod"},
      "labels": {"name": "camel-srv"}
    },
    {
      "apiVersion": "v1beta2",
      "creationTimestamp": null,
      "id": "rest-controller",
      "kind": "ReplicationController",
      "apiVersion": "v1beta2",
      "desiredState": {
        "replicas": 3,
        "replicaSelector": {
          "name": "camel-pod"
        },
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "containers": [
                {
                  "name": "rest-cnt",
                  "image": "wildflyext/example-camel-rest",
                  "ports": [
                    {
                      "protocol": "TCP",
                      "containerPort": 8080
                    }
                  ]
                }
              ]
            }
          },
          "labels": {"name": "camel-pod"}
        }
      },
      "labels": {"name": "camel-ctrl"}
    }
  ]
}
