{
id: "wildfly-camel-domain",
kind: "Config",
apiVersion: "v1beta1",
name: "wildfly-camel-domain",
description: "Creates a WildFly Camel domain",
items: [
    {
        id: "public-management-service",
        kind: "Service",
        apiVersion: "v1beta1",
        containerPort: 9990,
        port: 9990,
        selector: { name: "ctrl-pod" }
    },
    {
        id: "public-rest-service",
        kind: "Service",
        apiVersion: "v1beta1",
        containerPort: 8080,
        port: 8080,
        selector: { name: "rest-pod" }
    },
    {
        id: "domain-controller",
        kind: "Service",
        apiVersion: "v1beta1",
        containerPort: 9999,
        port: 9999,
        selector: { name: "ctrl-pod" }
    },
    {
      id: "master-replicator",
      kind: "ReplicationController",
      apiVersion: "v1beta1",
      desiredState: {
        replicas: 1,
        replicaSelector: { name: ctrl-pod},
        podTemplate: {
          desiredState: {
             manifest: {
               id: "ctrl-pod",
               version: "v1beta1",
               containers: [{
                 name: "domain-controller",
                 image: "wildflyext/wildfly-camel",
                 env: [{ name: "WILDFLY_MANAGEMENT_USER", value: "admin"}, { name: "WILDFLY_MANAGEMENT_PASSWORD", value: "admin"}],
                 command: [ "--domain-config", "domain-camel.xml", "--host-config", "host-camel.xml", "-b", "0.0.0.0", "-bmanagement", "0.0.0.0" ],
                 ports: [{ name: "http", containerPort: 9990 }]
               }]
             }
           },
           labels: {name: "ctrl-pod"}
          }}
    },
    {
      id: "host-replicator",
      kind: "ReplicationController",
      apiVersion: "v1beta1",
      desiredState: {
        replicas: 1,
        replicaSelector: { name: rest-pod },
        podTemplate: {
          desiredState: {
             manifest: {
               id: "rest-pod",
               version: "v1beta1",
               containers: [{
                 name: "domain-slave",
                 image: "wildflyext/wildfly-camel",
                 env: [{ name: "WILDFLY_MANAGEMENT_USER", value: "admin"}, { name: "WILDFLY_MANAGEMENT_PASSWORD", value: "admin"}],
                 command: [ "--domain-config", "domain-camel.xml", "--host-config", "host-camel-slave.xml", "-b", "0.0.0.0", "-bmanagement", "0.0.0.0" ]
               }]
             }
           },
           labels: {name: "rest-pod"}
          }}
    }
    ]
}